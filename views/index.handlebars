<div class="container">
  <div id="content-box">
    <div class="row">
      <div class="col-sm-6">
        <ul>
          {{#each burgers}} {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button class="btn btn-info" type="submit">Devour It!</button>
            </form>
          </li>
          {{/unless}} {{/each}}
        </ul>
      </div> {{!-- end col--}}

      <div class="col-sm-6">
        <ul>
          {{#each burgers}} {{#if this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
            </form>
          </li>
          {{/if}} {{/each}}
        </ul>
      </div>{{!-- end col--}}
    </div>{{!-- end row--}}

    <div class="text-center submit-btn">

      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">

          <input type="text" id="ca" name="name">
        </div> {{!-- end form group--}}

        <button class="btn btn-primary btn-lg" type="submit">Submit</button>
      </form>

    </div>{{!-- end container--}}
  </div>
</div>{{!-- end container--}}